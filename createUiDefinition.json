{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [],
    "steps": [
      {
        "name": "cluster",
        "label": "Cluster",
        "subLabel": {
          "preValidation": "Configure cluster settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Cluster",
        "elements": [
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "defaultValue": {
              "type": "Standard_LRS"
            }
          },
          {
            "name": "nodeCount",
            "type": "Microsoft.Common.DropDown",
            "label": "Cluster size",
            "defaultValue": "8 nodes",
            "toolTip": "The number of nodes in the cluster.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "2 nodes",
                  "value": 2
                },
                {
                  "label": "4 nodes",
                  "value": 4
                },
                {
                  "label": "8 nodes",
                  "value": 8
                },
                {
                  "label": "16 nodes",
                  "value": 16
                },
                {
                  "label": "32 nodes",
                  "value": 32
                },
                {
                  "label": "64 nodes",
                  "value": 64
                },
                {
                  "label": "128 nodes",
                  "value": 128
                }
              ]
            }
          },
          {
            "name": "nodeSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Node size",
            "toolTip": "The size of virtual machine to for each cluster node.",
            "recommendedSizes": [
              "Standard_A4",
              "Standard_D4",
              "Standard_D14"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS"
            },
            "count": "[steps('cluster').nodeCount]"
          },
          {
            "name": "jumpboxSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Jumpbox size",
            "toolTip": "The size of virtual machine for the jumpbox.",
            "recommendedSizes": [
              "Standard_A9",
              "Standard_D14"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS"
            },
            "count": 1
          },
          {
            "name": "quasardbVersion",
            "type": "Microsoft.Common.DropDown",
            "label": "quasardb version",
            "defaultValue": "2.0.0 beta 6",
            "toolTip": "The version of quasardb to install.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "2.0.0 beta 6",
                  "value": "2.0.0 beta 6"
                },
                {
                  "label": "2.0.0 beta 5",
                  "value": "2.0.0 beta 5"
                },
                {
                  "label": "nightly",
                  "value": "nightly"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "credentials",
        "label": "Credentials",
        "subLabel": {
          "preValidation": "Configure admin account",
          "postValidation": "Done"
        },
        "bladeTitle": "Credentials",
        "elements": [
          {
            "name": "adminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Admin username for the virtual machines.",
            "osPlatform": "Linux",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "adminCredentials",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "authenticationType": "Authentication type",
              "password": "Password",
              "confirmPassword": "Confirm password",
              "sshPublicKey": "SSH public key"
            },
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": false
            },
            "osPlatform": "Linux"
          }
        ]
      }
    ],
    "outputs": {
      "adminUsername": "[steps('credentials').adminUsername]",
      "authenticationType": "[steps('credentials').adminCredentials.authenticationType]",
      "adminPassword": "[steps('credentials').adminCredentials.password]",
      "sshPublicKey": "[steps('credentials').adminCredentials.sshPublicKey]",
      "storageAccountName": "[steps('cluster').storageAccount.name]",
      "nodeCount": "[steps('cluster').nodeCount]",
      "nodeSize": "[steps('cluster').nodeSize]",
      "jumpboxSize": "[steps('cluster').jumpboxSize]",
      "quasardbVersion": "[steps('cluster').quasardbVersion]"
    }
  }
}