{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [],
    "steps": [
      {
        "name": "cluster",
        "label": "Cluster",
        "subLabel": {
          "preValidation": "Configure cluster settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Cluster",
        "elements": [
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS",
                "Premium_LRS"
              ]
            },
            "defaultValue": {
              "type": "Standard_LRS"
            }
          },
          {
            "name": "nodeCount",
            "type": "Microsoft.Common.DropDown",
            "label": "Cluster size",
            "defaultValue": "4 nodes",
            "toolTip": "The number of nodes in the cluster.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "single node",
                  "value": 1
                },
                {
                  "label": "2 nodes",
                  "value": 2
                },
                {
                  "label": "4 nodes",
                  "value": 4
                },
                {
                  "label": "8 nodes",
                  "value": 8
                },
                {
                  "label": "16 nodes",
                  "value": 16
                },
                {
                  "label": "32 nodes",
                  "value": 32
                }
              ]
            }
          },
          {
            "name": "replication",
            "type": "Microsoft.Common.DropDown",
            "label": "Replication factor",
            "defaultValue": "2",
            "toolTip": "The number of copies of each entry.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "no replication",
                  "value": 1
                },
                {
                  "label": "2",
                  "value": 2
                },
                {
                  "label": "3",
                  "value": 3
                },
                {
                  "label": "4",
                  "value": 4
                }
              ]
            }
          },
          {
            "name": "nodeSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Node size",
            "toolTip": "The size of virtual machine for each cluster node.",
            "recommendedSizes": [
              "Standard_A3",
              "Standard_A7",
              "Standard_D4"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2",
                "Standard_D15_v2"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "quasardb",
              "offer": "quasardb-xtp-node",
              "sku": "20rc4"
            },
            "count": "[steps('cluster').nodeCount]"
          },
          {
            "name": "testboxSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Test box size",
            "toolTip": "The size of virtual machine for the test box.",
            "recommendedSizes": [
              "Standard_D4",
              "Standard_A7",
              "Standard_D14"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2",
                "Standard_D15_v2"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.3-LTS"
            },
            "count": 1
          }
        ]
      },
      {
        "name": "credentials",
        "label": "Credentials",
        "subLabel": {
          "preValidation": "Configure admin account",
          "postValidation": "Done"
        },
        "bladeTitle": "Credentials",
        "elements": [
          {
            "name": "adminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Admin username for the virtual machines.",
            "osPlatform": "Linux",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "adminCredentials",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "authenticationType": "Authentication type",
              "password": "Password",
              "confirmPassword": "Confirm password",
              "sshPublicKey": "SSH public key"
            },
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": false
            },
            "osPlatform": "Linux"
          }
        ]
      }
    ],
    "outputs": {
      "adminUsername": "[steps('credentials').adminUsername]",
      "authenticationType": "[steps('credentials').adminCredentials.authenticationType]",
      "adminPassword": "[steps('credentials').adminCredentials.password]",
      "sshPublicKey": "[steps('credentials').adminCredentials.sshPublicKey]",
      "storageAccountName": "[steps('cluster').storageAccount.name]",
      "storageAccountType": "[steps('cluster').storageAccount.type]",
      "nodeCount": "[steps('cluster').nodeCount]",
      "replication": "[steps('cluster').replication]",
      "nodeSize": "[steps('cluster').nodeSize]",
      "testboxSize": "[steps('cluster').testboxSize]",
      "location": "[location()]"
    }
  }
}