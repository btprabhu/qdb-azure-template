{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "authenticationType": {
      "type": "string",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ]
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Password for the Virtual Machine. Not used if authenticationType of sshPublicKey."
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH RSA public key file as a string. Not used if authenticationType of password."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage account name"
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "qdb-",
      "metadata": {
        "description": "Prefix for all names in the deployment"
      }
    },
    "nodeCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Number of nodes in the cluster"
      }
    },
    "replication": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 4,
      "metadata": {
        "description": "Data replication factor"
      }
    },
    "nodeSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "metadata": {
        "description": "Size of the virtual machines for each node"
      }
    },
    "jumpboxSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "Size of the virtual machine for the jumbox"
      }
    }
  },
  "variables": {
    "availabilitySet": "[concat(parameters('namePrefix'), 'cluster')]",
    "subnetName": "quasardb",
    "nodesIpPrefix": "10.0.0.",
    "nodeName": "[concat(parameters('namePrefix'), 'node')]",
    "jumpboxName": "[concat(parameters('namePrefix'), 'jumpbox')]",
    "jumpboxImage": {
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "14.04.3-LTS",
      "version": "latest"
    },
    "nodeImage": {
      "publisher": "quasardb",
      "offer": "quasardb-xtp-node",
      "sku": "20rc4",
      "version": "latest"
    },
    "region": "[parameters('location')]",
    "templateBaseUrl": "https://raw.githubusercontent.com/bureau14/qdb-azure-template/master/",
    "virtualNetworkName": "[concat(parameters('namePrefix'), 'vnet')]",
    "sshKeyPath": "[concat('/home/',parameters('adminUsername'),'/.ssh/authorized_keys')]",
    "linuxConfiguration_sshPublicKey": {
      "disablePasswordAuthentication": "true",
      "ssh": {
        "publicKeys": [
          {
            "path": "[variables('sshKeyPath')]",
            "keyData": "[parameters('sshPublicKey')]"
          }
        ]
      }
    },
    "linuxConfiguration_password": {},
    "linuxConfiguration": "[variables(concat('linuxConfiguration_',parameters('authenticationType')))]"
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('region')]"
          },
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('nodeName'), copyindex(1))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "shared-resources"
      ],
      "copy": {
        "name": "clusterNodesLoop",
        "count": "[parameters('nodeCount')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'node-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('region')]"
          },
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "ipAddress": {
            "value": "[concat(variables('nodesIpPrefix'), copyindex(10))]"
          },
          "nodeId": {
            "value": "[concat(copyindex(1),'/',parameters('nodeCount'))]"
          },
          "replication": {
            "value": "[parameters('replication')]"
          },
          "peerAddress": {
            "value": "[concat(variables('nodesIpPrefix'), 10)]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "templateBaseUrl": {
            "value": "[variables('templateBaseUrl')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('nodeImage')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmLinuxConfig": {
            "value": "[variables('linuxConfiguration')]"
          },
          "vmSize": {
            "value": "[parameters('nodeSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    },
    {
      "name": "[variables('jumpboxName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat(variables('nodeName'), '1')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'jumpbox-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('region')]"
          },
          "ipAddress": {
            "value": "10.0.0.4"
          },
          "peerAddress": {
            "value": "10.0.0.10"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "templateBaseUrl": {
            "value": "[variables('templateBaseUrl')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('jumpboxImage')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmLinuxConfig": {
            "value": "[variables('linuxConfiguration')]"
          },
          "vmSize": {
            "value": "[parameters('jumpboxSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "publicAddress": {
      "type": "string",
      "value": "[concat(reference(variables('jumpboxName')).outputs.domainNameLabel.value,'.',variables('region'),'.cloudapp.azure.com')]",
      "metadata": {
        "description": "SSH to this public address to access the jump box."
      }
    }
  }
}