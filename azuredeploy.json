{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json# ",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username used when provisioning virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password used when provisioning virtual machines"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "qdbstorage",
      "metadata": {
        "description": "Storage account name"
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "qdb-",
      "metadata": {
        "description": "Prefix for all names in the deployment"
      }
    },
    "region": {
      "type": "string",
      "allowedValues": [
        "East Asia",
        "East US",
        "Southeast Asia",
        "West Europe",
        "West US"
      ],
      "metadata": {
        "description": "Location where resources will be provisioned"
      }
    },
    "clusterSize": {
        "type": "int",
        "defaultValue": 3,
        "metadata": {
          "description": "Number of nodes in the cluster"
        }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "allowedValues": [
        "Standard_A2",
        "Standard_A6",
        "Standard_D14"
      ],
      "metadata": {
        "description": "Size of the virtual machines"
      }
    },
    "quasardbVersion": {
      "type": "string",
      "defaultValue": "nightly",
      "allowedValues": [
        "nightly"
      ],
      "metadata": {
        "description": "QuasarDB's version to install"
      }
    }
  },
  "variables": {  
    "availabilitySet": "[concat(parameters('namePrefix'), 'cluster')]",
    "subnetName": "quasardb",
    "nodesIpPrefix": "10.0.0.",
    "nodeName": "[concat(parameters('namePrefix'), 'node')]",  
    "jumpboxName": "[concat(parameters('namePrefix'), 'jumpbox')]",  
    "imageReference": {
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "14.04.3-LTS",
      "version": "latest"
    },
    "templateBaseUrl": "https://raw.githubusercontent.com/bureau14/qdb-azure-template/master/",
    "virtualNetworkName": "[concat(parameters('namePrefix'), 'vnet')]"
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('nodeName'), '0')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "shared-resources"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'node-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "ipAddress": {
            "value": "[concat(variables('nodesIpPrefix'), '10')]"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('nodeName'), copyindex(1))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat(variables('nodeName'), '0')]"
      ],
      "copy": {
        "name": "clusterNodesLoop",
        "count": "[sub(parameters('clusterSize'),1)]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'node-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "ipAddress": {
            "value": "[concat(variables('nodesIpPrefix'), copyindex(11))]"
          },
          "peerAddress": {
            "value": "[concat(variables('nodesIpPrefix'), 10)]"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    },
    {
      "name": "[variables('jumpboxName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat(variables('nodeName'), '0')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'jumpbox-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "ipAddress": {
            "value": "10.0.0.4"
          },
          "peerAddress": {
            "value": "10.0.0.10"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }        
        }
      }
    }
  ]
}