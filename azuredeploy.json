{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username used when provisioning virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password used when provisioning virtual machines. The supplied password must be between 6-72 characters long and must satisfy at least 3 of password complexity requirements from the following: \r\n1) Contains an uppercase character\r\n2) Contains a lowercase character\r\n3) Contains a numeric digit\r\n4) Contains a special character."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage account name"
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "qdb-",
      "metadata": {
        "description": "Prefix for all names in the deployment"
      }
    },
    "nodeCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Number of nodes in the cluster"
      }
    },
    "nodeSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "metadata": {
        "description": "Size of the virtual machines for each node"
      }
    },
    "jumpboxSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "Size of the virtual machine for the jumbox"
      }
    },
    "quasardbVersion": {
      "type": "string",
      "defaultValue": "2.0.0 beta 6",
      "allowedValues": [
        "2.0.0 beta 6",
        "2.0.0 beta 5",
        "nightly"
      ],
      "metadata": {
        "description": "QuasarDB's version to install"
      }
    }
  },
  "variables": {
    "availabilitySet": "[concat(parameters('namePrefix'), 'cluster')]",
    "subnetName": "quasardb",
    "nodesIpPrefix": "10.0.0.",
    "nodeName": "[concat(parameters('namePrefix'), 'node')]",
    "jumpboxName": "[concat(parameters('namePrefix'), 'jumpbox')]",
    "imageReference": {
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "14.04.3-LTS",
      "version": "latest"
    },
    "region": "[resourceGroup().location]",
    "templateBaseUrl": "https://raw.githubusercontent.com/bureau14/qdb-azure-template/master/",
    "virtualNetworkName": "[concat(parameters('namePrefix'), 'vnet')]"
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('nodeName'), '0')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "shared-resources"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'node-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "ipAddress": {
            "value": "[concat(variables('nodesIpPrefix'), '10')]"
          },
          "nodeCount": {
            "value": "[parameters('nodeCount')]"
          },
          "nodeIndex": {
            "value": 0
          },
          "peerAddress": {
            "value": "[concat(variables('nodesIpPrefix'), 10)]"
          },
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "templateBaseUrl": {
            "value": "[variables('templateBaseUrl')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('nodeSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('nodeName'), copyindex(1))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat(variables('nodeName'), '0')]"
      ],
      "copy": {
        "name": "clusterNodesLoop",
        "count": "[sub(parameters('nodeCount'),1)]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'node-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "availabilitySet": {
            "value": "[variables('availabilitySet')]"
          },
          "ipAddress": {
            "value": "[concat(variables('nodesIpPrefix'), copyindex(11))]"
          },
          "nodeCount": {
            "value": "[parameters('nodeCount')]"
          },
          "nodeIndex": {
            "value": "[copyindex(1)]"
          },
          "peerAddress": {
            "value": "[concat(variables('nodesIpPrefix'), 10)]"
          },
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "templateBaseUrl": {
            "value": "[variables('templateBaseUrl')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('nodeSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    },
    {
      "name": "[variables('jumpboxName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat(variables('nodeName'), '0')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'jumpbox-resources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ipAddress": {
            "value": "10.0.0.4"
          },
          "peerAddress": {
            "value": "10.0.0.10"
          },
          "quasardbVersion": {
            "value": "[parameters('quasardbVersion')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "templateBaseUrl": {
            "value": "[variables('templateBaseUrl')]"
          },
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "vmImage": {
            "value": "[variables('imageReference')]"
          },
          "vmPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize": {
            "value": "[parameters('jumpboxSize')]"
          },
          "vmUser": {
            "value": "[parameters('adminUsername')]"
          }
        }
      }
    }
  ]
}